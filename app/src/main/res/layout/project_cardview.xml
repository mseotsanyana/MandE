<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/project_cardview_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="4dp"
            android:layout_margin="5dp">

            <com.me.mseotsanyana.expandablelayoutlibrary.cExpandableLayout
                android:id="@+id/project_expandablelayout_id"
                app:expWithParentScroll="true"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/selector_row">

                    <TextView
                        android:id="@+id/txtName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/title_info"
                        android:padding="2dp"
                        android:gravity="center_vertical"
                        android:text="project"
                        android:textColor="@android:color/white"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary"
                    android:padding="6dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtDescription"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Project Description:"
                        android:gravity="center_vertical"
                        android:textSize="12dp"
                        android:textColor="#D50000"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/valDescription"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="text"
                        android:textColor="@android:color/white"
                        android:gravity="center_vertical"
                        android:textSize="16dp" />

                    <View style="@style/Divider"/>

                    <TextView
                        android:id="@+id/txtCountry"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Country:"
                        android:gravity="center_vertical"
                        android:textSize="10dp"
                        android:textColor="#D50000"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/valCountry"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="text"
                        android:textColor="@android:color/white"
                        android:gravity="center_vertical"
                        android:textSize="16dp" />

                    <View style="@style/Divider"/>

                    <TextView
                        android:id="@+id/txtRegion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Region:"
                        android:gravity="center_vertical"
                        android:textSize="10dp"
                        android:textColor="#D50000"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/valRegion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="text"
                        android:textColor="@android:color/white"
                        android:gravity="center_vertical"
                        android:textSize="16dp" />

                    <View style="@style/Divider"/>

                    <TextView
                        android:id="@+id/txtStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Project Status:"
                        android:gravity="center_vertical"
                        android:textSize="10dp"
                        android:textColor="#D50000"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/valStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="text"
                        android:textColor="@android:color/white"
                        android:gravity="center_vertical"
                        android:textSize="16dp" />
                    <View style="@style/Divider"/>

                    <TextView
                        android:id="@+id/txtStartDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Project Start Date:"
                        android:gravity="center_vertical"
                        android:textSize="10dp"
                        android:textColor="#D50000"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/valStartDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="text"
                        android:textColor="@android:color/white"
                        android:gravity="center_vertical"
                        android:textSize="16dp" />

                    <View style="@style/Divider"/>

                    <TextView
                        android:id="@+id/txtCloseDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Project End Date:"
                        android:gravity="center_vertical"
                        android:textSize="10dp"
                        android:textColor="#D50000"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/valCloseDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="text"
                        android:textColor="@android:color/white"
                        android:gravity="center_vertical"
                        android:textSize="16dp" />

                    <View style="@style/Divider"/>

                    <TextView
                        android:id="@+id/txtCreateDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Date:"
                        android:gravity="center_vertical"
                        android:textSize="10dp"
                        android:textColor="#D50000"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/valCreateDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="text"
                        android:textColor="@android:color/white"
                        android:gravity="center_vertical"
                        android:textSize="16dp" />

                    <View style="@style/Divider"/>

                    <TextView
                        android:id="@+id/txtManager"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Project Manager:"
                        android:gravity="center_vertical"
                        android:textSize="10dp"
                        android:textColor="#D50000"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/valManager"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="text"
                        android:textColor="@android:color/white"
                        android:gravity="center_vertical"
                        android:textSize="16dp" />

                </LinearLayout>

            </com.me.mseotsanyana.expandablelayoutlibrary.cExpandableLayout>
        </androidx.appcompat.widget.CardView>
    </RelativeLayout>
</LinearLayout>
