<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardBackgroundColor="@color/bkg_card"
            card_view:cardCornerRadius="4dp"
            android:layout_margin="6dp">

            <TextView
                android:id="@+id/txtCountSpecificAim"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:padding="2dp"
                android:textSize="@dimen/songs_count"
                android:text="count"/>

            <ImageView
                android:id="@+id/specificationAim_icon_iv"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:padding="5dp"
                android:src="@drawable/ic_expend"/>

            <TextView
                android:id="@+id/txtSpecificAim"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="15dp"
                android:padding="2dp"
                android:gravity="center_vertical"
                android:text="project"
                android:textColor="@android:color/white"
                android:textSize="18dp"
                android:textStyle="bold" />

        </androidx.appcompat.widget.CardView>
    </RelativeLayout>
</LinearLayout>